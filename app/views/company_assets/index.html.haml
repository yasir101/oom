= link_to "New Asset", new_company_asset_path

%table.table
  %thead
    %tr
      %th{scope: "col"} #
      %th{scope: "col"} Name
      %th{scope: "col"} Quantity
      %th{scope: "col"} Description
      %th{scope: "col"} Action
  %tbody
    - @company_assets.each.with_index(1) do |asset, index|
      %tr
        %th= index
        %td= asset.name
        %td= asset.quantity
        %td= asset.description
        %td
          = link_to "Edit", edit_company_asset_path(asset)